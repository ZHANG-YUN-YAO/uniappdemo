.topTabbar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-justify-content: space-around;
          justify-content: space-around;
}
.topTabbar .tabItem {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
}
.topTabbar .tabItem .tabText {
  color: #757575;
}
.topTabbar .active .tabText {
  color: black;
}
.topTabbar .active .bottomline {
  background-color: #ee4633;
  height: 8rpx;
  border-radius: 4rpx;
}

