.teaGarden .uni-padding-wrap {
  padding: 28rpx;
}
.teaGarden .uni-padding-wrap .swiper {
  width: 694rpx;
  height: 361rpx;
}
.teaGarden .uni-padding-wrap .swiper .swiper-item image {
  width: 100%;
}
.teaGarden .uni-grid .uni-grid-item {
  text-align: center;
}
.teaGarden .uni-grid .uni-grid-item image {
  width: 69rpx;
  height: 69rpx;
  margin: 0 auto;
}
.teaGarden .uni-grid .uni-grid-item text {
  margin: 15rpx 0 0 0 ;
  font-size: 18rpx;
  font-family: FZLTZHUNHK;
  font-weight: normal;
  color: #161e49;
}
.teaGarden .goods .title {
  font-size: 32rpx;
  padding-left: 27rpx;
  font-family: FZLTZHUNHK;
  font-weight: normal;
  color: #161E49;
  line-height: 27rpx;
}
.teaGarden .goods .goodslist {
  padding-top: 21rpx;
}
.teaGarden .goods .goodslist .img {
  text-align: center;
  margin-top: 21rpx;
}
.teaGarden .goods .goodslist .img image {
  width: 694rpx;
  height: 333rpx;
}
.teaGarden .goods .desc {
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  padding: 28rpx;
}
.teaGarden .goods .desc .descdetail {
  width: 722rpx;
  font-size: 25rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #161e49;
  line-height: 38rpx;
}
.teaGarden .goods .desc .price {
  font-size: 32rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  display: block;
  padding-top: 21rpx;
  color: #ff2829;
  line-height: 37rpx;
}
.teaGarden .goods .discuss {
  padding: 0 28rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.teaGarden .goods .discuss text {
  display: inline-block;
  font-size: 21rpx;
  font-weight: normal;
  color: #999999;
}
.teaGarden .goods .tag ._ul {
  padding-left: 28rpx;
}
.teaGarden .goods .tag ._ul ._li {
  padding: 9rpx 21rpx;
  background: rgba(40, 82, 242, 0.2);
  margin-right: 21rpx;
  display: inline-block;
  border-radius: 19rpx;
  font-size: 21rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #161E49;
  line-height: 27rpx;
}
.teaGarden .goods .author .info {
  padding: 21rpx 0 0 28rpx;
}
.teaGarden .goods .author .info image {
  width: 56rpx;
  height: 56rpx;
  background: #2852f2;
  border-radius: 50%;
  display: inline-block;
}
.teaGarden .goods .author .info .authorname {
  font-size: 25rpx;
  font-family: FZLTZHUNHK;
  font-weight: normal;
  color: #161e49;
  line-height: 13rpx;
  margin-left: 15rpx;
  position: relative;
  top: -16rpx;
}
.teaGarden .goods .author .infodesc {
  padding: 0 28rpx;
  font-size: 21rpx!important;
  font-family: FZLTZHUNHK;
  font-weight: normal;
  color: #999999;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.teaGarden .goods .author .infodesc .font-info {
  font-size: 21rpx!important;
  font-family: FZLTZHUNHK;
  font-weight: normal;
  color: #999999;
}

