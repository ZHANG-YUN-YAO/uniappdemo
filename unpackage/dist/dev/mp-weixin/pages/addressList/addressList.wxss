.addresslist .address {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  padding: 42rpx 28rpx 23rpx 28rpx;
}
.addresslist .address .name {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin-bottom: 30rpx;
  color: #161e49;
  line-height: 27rpx;
}
.addresslist .address .area {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.addresslist .address .area .areastatus {
  font-size: 32rpx;
  font-family: PingFang SC;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  width: 500rpx;
  font-weight: 400;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #787878;
}
.addresslist .address .area .use {
  width: 104rpx;
  height: 47rpx;
  font-size: 25rpx;
  font-family: PingFang SC;
  line-height: 47rpx;
  font-weight: 400;
  text-align: center;
  color: #bfc2d2;
  border: 2rpx solid #babdcf;
  border-radius: 7rpx;
}
.addresslist .address .area .use2 .useok {
  width: 34rpx;
  height: 22rpx;
}
.addresslist .address .btns {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  width: 694rpx;
  padding: 40rpx  0 23rpx 0;
  border-bottom: 2rpx solid #BABDCF;
}
.addresslist .address .btns .btnfir {
  font-size: 25rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #babdcf;
  line-height: 13rpx;
}
.addresslist .address .btns .btnrig {
  font-size: 25rpx;
  font-family: PingFang SC;
  font-weight: 400;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
          justify-content: flex-end;
  color: #babdcf;
  line-height: 13rpx;
}
.addresslist .address .btns .btnrig .dele,
.addresslist .address .btns .btnrig .edit {
  margin-left: 55rpx;
}
.addresslist .addarea {
  width: 556rpx;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 22rpx;
  height: 69rpx;
  text-align: center;
  line-height: 69rpx;
  background: #ef104a;
  margin: 0 auto;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #ffffff;
  border-radius: 35rpx;
}
.addresslist .addarea .addicon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
  position: relative;
  top: 6rpx;
}

